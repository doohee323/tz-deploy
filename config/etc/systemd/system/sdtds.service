[Unit]
Description=SodatTransferDeploy Server
After=network.target

[Service]
Type=simple
PIDFile=/mnt/SodaTransferDeploy/download/sdtds.pid
WorkingDirectory=/mnt/SodaTransferDeploy
ExecStart=/usr/bin/node /mnt/SodaTransferDeploy/app.js server
ExecStop=/bin/killall node

Restart=on-failure
RestartSec=30

[Install]
WantedBy=default.target
